{
   "name": "cow-chaos",
   "version": "0.0.0",
   "private": true,
   "type": "module",
   "scripts": {
      "client:dev": "pushd client && vite",
      "client:build": "pushd client && vite build",
      "client:preview": "pushd client && vite preview",
      "tsc": "pushd client && vue-tsc --noEmit && popd && pushd server && tsc --noEmit",
      "lint": "pushd client && eslint .",
      "format": "pushd client && prettier --write src/",
      "server:start": "pushd server && node dist/app.js",
      "server:dev": "pushd server && tsx watch app.ts",
      "standards": "npm run lint && npm run tsc",
      "dev": "run-p *:dev"
   },
   "dependencies": {
      "express": "^5.0.0",
      "vue": "^3.5.13",
      "vue-router": "^4.5.0"
   },
   "devDependencies": {
      "@tsconfig/node22": "^22.0.0",
      "@types/express": "^4.17.21",
      "@types/node": "22.10.2",
      "@vitejs/plugin-vue": "^5.2.1",
      "@vue/eslint-config-prettier": "^10.1.0",
      "@vue/eslint-config-typescript": "^14.1.3",
      "@vue/tsconfig": "^0.7.0",
      "eslint": "^9.14.0",
      "eslint-plugin-vue": "^9.30.0",
      "npm-run-all2": "^7.0.2",
      "prettier": "^3.3.3",
      "tsx": "4.19.2",
      "typescript": "~5.6.3",
      "vite": "^6.0.5",
      "vite-plugin-vue-devtools": "^7.6.8",
      "vue-tsc": "^2.1.10"
   }
}
